<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuri.speechbluetoothandroidstudio">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManualArmControlsActivity" />
        <activity android:name=".VoiceArmControlsActivity" />
        <activity android:name=".ManualCartControlsActivity" />
        <activity android:name=".VoiceCartControlsActivity" />
        <activity android:name=".ArmConnectivityActivity" />
        <activity android:name=".CartConnectivityActivity"></activity>
    </application>

</manifest>